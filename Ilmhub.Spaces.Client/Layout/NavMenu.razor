<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon">
        <FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" />
    </label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded"
            CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.PersonAdd())"
                IconColor="Color.Accent">Leads</FluentNavLink>
            <FluentNavLink Href="counter" Icon="@(new Icons.Regular.Size20.HatGraduation())"
                IconColor="Color.Accent">Students</FluentNavLink>
            <FluentNavLink Href="weather" Icon="@(new Icons.Regular.Size20.LayerDiagonalPerson())"
                IconColor="Color.Accent">Classes</FluentNavLink>
            <FluentNavLink Href="programs" Icon="@(new Icons.Regular.Size20.ListBarTreeOffset())"
                IconColor="Color.Accent">Programs</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
